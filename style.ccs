body {
  font-family: Arial, sans-serif;
  background: #111;
  color: #fff;
  text-align: center;
  padding-top: 50px;
}

button {
  padding: 15px 30px;
  font-size: 1.2rem;
  margin-top: 20px;
  cursor: pointer;
  background: #1e90ff;
  color: #fff;
  border: none;
  border-radius: 8px;
  transition: transform 0.2s;
}

button:hover {
  transform: scale(1.05);
}
